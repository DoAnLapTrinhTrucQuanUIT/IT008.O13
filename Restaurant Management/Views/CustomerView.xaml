<UserControl x:Class="Restaurant_Management.Views.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_Management.Views"
             xmlns:vm="clr-namespace:Restaurant_Management.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="989" d:DesignWidth="1560"
             Style="{StaticResource Page_Style}"
             xmlns:Component="clr-namespace:Restaurant_Management.Views.Component">
    
    <UserControl.DataContext>
        <vm:CustomerVM/>
    </UserControl.DataContext>

    <Border Background="#F3EEEA"
            Padding="50">
        <StackPanel Orientation="Vertical">
            <Border Background="#fff"
                    CornerRadius="20"
                    Height="226"
                    Padding="30">
                <StackPanel Orientation="Horizontal">
                    <Grid Margin="0 0 50 0">
                        <Component:Customer TextHeader="Total Customer"
                                            TextofNumber="10000000"
                                            TextofPercent="5%"
                                            ImagePathSymbol="../Assets/Images/group.png"
                                            ImagePathStatus="../Assets/Images/arrow_upward.png" />
                    </Grid>

                    <Grid Margin="50 0 50 0">
                        <Component:Customer TextHeader="New Customer"
                                            TextofNumber="100"
                                            TextofPercent="1%"
                                            ImagePathSymbol="../Assets/Images/person_check.png"
                                            ImagePathStatus="../Assets/Images/arrow_downward.png" />
                    </Grid>

                    <Grid Margin="50 0 0 0">
                        <Component:Customer TextHeader="Potential Customer"
                                            TextofNumber="20"
                                            TextofPercent="5%"
                                            ImagePathSymbol="../Assets/Images/person_celebrate.png"
                                            ImagePathStatus="../Assets/Images/arrow_upward.png" />
                    </Grid>
                </StackPanel>
            </Border>
            <!--Main Section-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                
                <!--Research TextBox-->
                <Grid Width="372" HorizontalAlignment="Left">
                    <TextBlock Margin="20 6" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                               Panel.ZIndex="1"
                               Text="Search Customer">
                        
                    </TextBlock>
                    <TextBox x:Name="txtSearch" />
                    <Image Source="../Assets/Images/Search icon.png"
                           Width="20"
                           Height="20"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="0 0 20 0" />
                </Grid>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
