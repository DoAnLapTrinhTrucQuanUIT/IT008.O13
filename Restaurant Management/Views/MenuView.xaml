<UserControl x:Class="Restaurant_Management.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:components="clr-namespace:Restaurant_Management.Views.Component"
             xmlns:local="clr-namespace:Restaurant_Management.Views"
             xmlns:vm="clr-namespace:Restaurant_Management.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="989" d:DesignWidth="1560"
             Style="{StaticResource Page_Style}">
    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--Menu category & selection-->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!--Menu category-->
            <Border Grid.Row="0" Padding="30 30 30 25">
                <Border  Background="#F3EEEA" CornerRadius="20">
                    <Border Padding="50 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>

                            <!--Header-->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!--Title-->
                                <Grid Grid.Column="0">
                                    <TextBlock Text="Menu Category"
                                           Foreground="#000"
                                           FontSize="40"
                                           FontFamily="Roboto"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                                </Grid>

                                <!--Sorted by Dropdown-->
                                <Grid Grid.Column="1"  Margin="0 0 50 0">
                                    <ComboBox x:Name="OutlinedComboBox"
                                              Background="#FAFAFA"
                                              materialDesign:HintAssist.Hint="Sorted by"
                                              IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
                                              ItemsSource="{Binding ShortStringList}"
                                              Style="{StaticResource   MaterialDesignOutlinedComboBox}" />
                                </Grid>


                            </Grid>

                            <!--Food card-->
                            <Grid Grid.Row="1" Margin="0 0 0 50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <!--Pizza-->
                                <local:CategoryCard x:Name="Pizza" CategoryImage="{Binding}" Text="Pizza" Grid.Column="0"/>
                                <!--Fruits-->
                                <local:CategoryCard x:Name="Fruits" CategoryImage="{Binding}" Text="Fruits" Grid.Column="1"/>
                                <!--Snacks-->
                                <local:CategoryCard x:Name="Snacks" CategoryImage="{Binding}" Text="Snacks" Grid.Column="2"/>
                                <!--Veggies-->
                                <local:CategoryCard x:Name="Veggies" CategoryImage="{Binding}" Text="Veggies" Grid.Column="3"/>
                                <!--Burger-->
                                <local:CategoryCard x:Name="Burger" CategoryImage="{Binding}" Text="Burger" Grid.Column="4"/>
                                <!--Drinks-->
                                <local:CategoryCard x:Name="Drinks" CategoryImage="{Binding}" Text="Drinks" Grid.Column="5"/>
                            </Grid>

                        </Grid>
                    </Border>
                </Border>
            </Border>

            <!--Menu selection-->
            <Border Grid.Row="1" Padding="30 25 30 30" Margin="0 0 0 50">
                <Border Background="#F3EEEA" CornerRadius="20" Padding="20">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <WrapPanel>
                            <local:FoodCard FoodName="Name of Food" FoodPrice="10.000"/>
                            <local:FoodCard FoodName="Name of Food" FoodPrice="10.000"/>
                            <local:FoodCard FoodName="Name of Food" FoodPrice="10.000"/>
                            <local:FoodCard FoodName="Name of Food" FoodPrice="10.000"/>
                        </WrapPanel>
                    </ScrollViewer>
                </Border>
            </Border>   
        </Grid>
        
        <!--Right sidebar-->
        <Grid Grid.Column="1">
            
        </Grid>
        
    </Grid>
</UserControl>
