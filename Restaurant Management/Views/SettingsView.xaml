<UserControl x:Class="Restaurant_Management.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Restaurant_Management.Views"
             xmlns:vm="clr-namespace:Restaurant_Management.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="984"
             d:DesignWidth="1560"
             Style="{StaticResource Page_Style}">
    <UserControl.DataContext>
        <vm:SettingsVM/>
    </UserControl.DataContext>
    
    <Border Width="1560"
            Height="984"
            Padding="358.5,115"
            Background="#F3EEEA"
            CornerRadius="12"
            Margin="0">
        <StackPanel>
            <Border Width="843"
                    Height="645"
                    Padding="50"
                    Background="#ffff"
                    CornerRadius="20"
                    Margin="0">
                <StackPanel>
                    <Border Width="200"
                            Height="200"
                            Background="#DEDEDE"
                            CornerRadius="100">
                        <Image Source="{Binding}"/>
                    </Border>
                    <Grid Margin="0,70,0,0">
                        <TextBlock Text="{Binding}"
                                   Foreground="Black"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center" />
                    </Grid>
                    <Grid Margin="0,10,0,0">
                        <TextBlock Text="{Binding}"
                                   Foreground="#666666"
                                   FontSize="18"
                                   FontFamily="Roboto"
                                   FontWeight="Normal"
                                   TextAlignment="Center" />
                    </Grid>
                    <!--Email-->
                    <Grid Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="107">
                                <TextBlock Text="Email"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Normal" />
                            </Grid>
                            <Grid Width="4"
                                  Margin="50,0,0,0">
                                <TextBlock Text=":"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Normal" />
                            </Grid>
                            <Grid Margin="50,0,0,0">
                                <TextBlock Text="{Binding}"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Light" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                    <!--Phone Number-->
                    <Grid Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="107">
                                <TextBlock Text="Phone Number"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Regular" />
                            </Grid>
                            <Grid Width="4"
                                  Margin="50,0,0,0">
                                <TextBlock Text=":"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Normal" />
                            </Grid>
                            <Grid Margin="50,0,0,0">
                                <TextBlock Text="{Binding}"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Light" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                    <!--Date of Birth-->
                    <Grid Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="107">
                                <TextBlock Text="Date of Birth"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Normal" />
                            </Grid>
                            <Grid Width="4"
                                  Margin="50,0,0,0">
                                <TextBlock Text=":"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Normal" />
                            </Grid>
                            <Grid Margin="50,0,0,0">
                                <TextBlock Text="{Binding}"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Light" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                    <!--Gender-->
                    <Grid Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="107">
                                <TextBlock Text="Gender"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Normal" />
                            </Grid>
                            <Grid Width="4"
                                  Margin="50,0,0,0">
                                <TextBlock Text=":"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Normal" />
                            </Grid>
                            <Grid Margin="50,0,0,0">
                                <TextBlock Text="{Binding}"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Light" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                    <!--Address-->
                    <Grid Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="107">
                                <TextBlock Text="Address"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Normal" />
                            </Grid>
                            <Grid Width="4"
                                  Margin="50,0,0,0">
                                <TextBlock Text=":"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Normal" />
                            </Grid>
                            <Grid Margin="50,0,0,0">
                                <TextBlock Text="{Binding}"
                                           Foreground="Black"
                                           FontSize="16"
                                           FontFamily="Roboto"
                                           FontWeight="Light" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <StackPanel Margin="0,50,0,0"  Orientation="Horizontal">
                <!--Log out-->
                <Border Width="396.5"
                        Height="60"
                        Background="#000"
                        CornerRadius="10"
                        Margin="0">
                    <TextBlock Height="20.5"
                               Width="69"
                               Text="Log out"
                               Foreground="#fff"
                               FontSize="18"
                               FontFamily="Roboto"
                               FontWeight="SemiBold"
                               TextAlignment="Center" />
                </Border>
                <!--Update profile-->
                <Border Width="396.5"
                        Height="60"
                        Background="#FF7F50"
                        CornerRadius="10"
                        Margin="50, 0, 0, 0">
                    <TextBlock Height="20.5"
                               Width="118"
                               Text="Update Profile"
                               Foreground="#fff"
                               FontSize="18"
                               FontFamily="Roboto"
                               FontWeight="SemiBold"
                               TextAlignment="Center" />
                </Border>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
