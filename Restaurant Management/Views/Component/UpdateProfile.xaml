<UserControl x:Class="Restaurant_Management.Views.Component.UpdateProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_Management.Views.Component"
             mc:Ignorable="d" 
             d:DesignHeight="877" d:DesignWidth="750">
    <Border Width="750"
            Height="877"
            Padding="50, 50"
            Background="#ffff"
            CornerRadius="20"
            Margin="0">
        <StackPanel>
            <!--Name-->
            <Grid Height="104">
                <StackPanel>
                    <Grid Height="42">
                        <TextBlock Text="Name"
                                   Foreground="#999"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   FontWeight="Medium" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                    <Grid>
                        <Border Width="650"
                                Height="62"
                                Background="#ffff"
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D9D9D9" />
                    </Grid>
                </StackPanel>
            </Grid>
            <!--Email-->
            <Grid Height="104" 
                  Margin="0, 40, 0, 0">
                <StackPanel>
                    <Grid Height="42">
                        <TextBlock Text="Email"
                                   Foreground="#999"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" />
                    </Grid>
                    <Grid>
                        <Border Width="650"
                                Height="62"
                                Background="#ffff"
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D9D9D9" />
                    </Grid>
                </StackPanel>
            </Grid>
            <!--Phone Number-->
            <Grid Height="104"
                  Margin="0, 40, 0, 0">
                <StackPanel>
                    <Grid Height="42">
                        <TextBlock Text="Phone Number"
                                   Foreground="#999"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" />
                    </Grid>
                    <Grid>
                        <Border Width="650"
                                Height="62"
                                Background="#ffff"
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D9D9D9" />
                    </Grid>
                </StackPanel>
            </Grid>
            <!--Date of Birth and Gender-->
            <StackPanel Orientation="Horizontal"
                        Margin="0, 40, 0, 0">
                <!--Date of Birth-->
                <Grid Width="300" Height="104">
                    <StackPanel>
                        <Grid Height="42">
                            <TextBlock Text="Date of Birth"
                                       Foreground="#999"
                                       FontSize="24"
                                       FontFamily="Roboto"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center" />
                        </Grid>
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Border Width="300"
                                        Height="62"
                                        Background="#ffff"
                                        CornerRadius="10"
                                        BorderThickness="2"
                                        BorderBrush="#D9D9D9" />
                            </Grid>
                            <Grid>
                                <Image Source="../Assets/Images/calender.png"
                                       Width="32"
                                       Height="32" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <!--Gender-->
                <Grid Width="300"
                      Height="104"
                      Margin="50,0,0,0">
                    <StackPanel>
                        <Grid Height="42">
                            <TextBlock Text="Gender"
                                       Foreground="#999"
                                       FontSize="24"
                                       FontFamily="Roboto"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center" />
                        </Grid>
                        <Grid>
                            <Border Width="300"
                                    Height="62"
                                    Background="#ffff"
                                    CornerRadius="10"
                                    BorderThickness="2"
                                    BorderBrush="#D9D9D9" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <!--Address-->
            <Grid Height="104"
                  Margin="0, 40, 0, 0">
                <StackPanel>
                    <Grid Height="42">
                        <TextBlock Text="Address"
                                   Foreground="#999"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" />
                    </Grid>
                    <Grid>
                        <Border Width="650"
                                Height="62"
                                Background="#ffff"
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D9D9D9" />
                    </Grid>
                </StackPanel>
            </Grid>


            <StackPanel Margin="0,40,0,0"
                        Orientation="Horizontal">
                <!--Change password-->
                <Border Width="305"
                        Height="53"
                        Background="#000"
                        CornerRadius="10"
                        Margin="0">
                    <TextBlock Height="20.5"
                               Width="147"
                               Text="Change password"
                               Foreground="#fff"
                               FontSize="18"
                               FontFamily="Roboto"
                               FontWeight="SemiBold"
                               TextAlignment="Center" />
                </Border>
                <!--Confirm-->
                <Border Width="305"
                        Height="53"
                        Background="#FF7F50"
                        CornerRadius="10"
                        Margin="40, 0, 0, 0">
                    <TextBlock Height="20.5"
                               Width="66"
                               Text="Confirm"
                               Foreground="#fff"
                               FontSize="18"
                               FontFamily="Roboto"
                               FontWeight="SemiBold"
                               TextAlignment="Center" />
                </Border>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
