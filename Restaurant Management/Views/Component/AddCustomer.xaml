<UserControl x:Class="Restaurant_Management.Views.Component.AddCustomer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_Management.Views.Component"
             mc:Ignorable="d" 
             d:DesignHeight="877" d:DesignWidth="750">
    <Border Width="750"
            Height="877"
            Padding="50, 50"
            Background="#ffff"
            CornerRadius="20">
        <StackPanel>
            <!--Name-->
            <Grid Height="104">
                <StackPanel>
                    <Grid Height="42">
                        <TextBlock Text="Name"
                                   Foreground="#999"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" />
                    </Grid>
                    <Grid>
                        <Border Width="650"
                                Height="62"
                                Background="#ffff"
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D9D9D9" />
                    </Grid>
                </StackPanel>
            </Grid>
            <!--Address-->
            <Grid Height="104"
                  Margin="0, 40, 0, 0">
                <StackPanel>
                    <Grid Height="42">
                        <TextBlock Text="Address"
                                   Foreground="#999"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" />
                    </Grid>
                    <Grid>
                        <Border Width="650"
                                Height="62"
                                Background="#ffff"
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D9D9D9" />
                    </Grid>
                </StackPanel>
            </Grid>

            <!--Phone Number-->
            <Grid Height="104"
                  Margin="0, 40, 0, 0">
                <StackPanel>
                    <Grid Height="42">
                        <TextBlock Text="Phone Number"
                                   Foreground="#999"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" />
                    </Grid>
                    <Grid>
                        <Border Width="650"
                                Height="62"
                                Background="#ffff"
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D9D9D9" />
                    </Grid>
                </StackPanel>
            </Grid>

            <!--Email-->
            <Grid Height="104"
                  Margin="0, 40, 0, 0">
                <StackPanel>
                    <Grid Height="42">
                        <TextBlock Text="Email"
                                   Foreground="#999"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" />
                    </Grid>
                    <Grid>
                        <Border Width="650"
                                Height="62"
                                Background="#ffff"
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D9D9D9" />
                    </Grid>
                </StackPanel>
            </Grid>

            <!--Registration Date-->
            <Grid Height="104"
                  Margin="0, 40, 0, 0">
                <StackPanel>
                    <Grid Height="42">
                        <TextBlock Text="Registration Date"
                                   Foreground="#999"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" />
                    </Grid>
                    <Grid>
                        <Border Height="62"
                                Background="#ffff"
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="#D9D9D9"
                                Padding="20,0,20,0">
                            <StackPanel Orientation="Horizontal">
                                <Grid Width="570"
                                      Height="58">
                                    <TextBlock Text="30-2-2099"
                                               Foreground="#999"
                                               FontSize="20"
                                               FontFamily="Roboto"
                                               FontWeight="Normal"
                                               VerticalAlignment="Center" />
                                </Grid>
                                <Grid Width="36">
                                    <Image Source="../Assets/Images/calender.png"
                                           Width="32"
                                           Height="32" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>

            <StackPanel Margin="0,40,0,0"
                        Orientation="Horizontal">
                <!--Cancel-->
                <Border Width="305"
                        Height="54"
                        Background="#000"
                        CornerRadius="10"
                        Margin="0">
                    <TextBlock Height="20.5"
                               Width="56"
                               Text="Cancel"
                               Foreground="#fff"
                               FontSize="18"
                               FontFamily="Roboto"
                               FontWeight="SemiBold"
                               TextAlignment="Center" />
                </Border>
                <!--Confirm-->
                <Border Width="305"
                        Height="54"
                        Background="#FF7F50"
                        CornerRadius="10"
                        Margin="40, 0, 0, 0">
                    <TextBlock Height="20.5"
                               Width="66"
                               Text="Confirm"
                               Foreground="#fff"
                               FontSize="18"
                               FontFamily="Roboto"
                               FontWeight="SemiBold"
                               TextAlignment="Center" />
                </Border>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
