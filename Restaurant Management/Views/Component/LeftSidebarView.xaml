<UserControl x:Class="Restaurant_Management.Views.LeftSidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_Management.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="360">
    <Grid Background="White" Margin="10" VerticalAlignment="Top">
        <StackPanel Orientation="Vertical">
            <!--Business Title and Logo-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Padding="0,0,120,0" Text="BUSINESS TITLE &amp; LOGO" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" LineHeight="20"/>
                    <Image Source="../Assets/Images/settings.png" Width="24" Height="24"/>
                </StackPanel>
            </Border>
            <!--Core Operations-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="Core Operations" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            <!--Menu-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="../Assets/Images/menu.png" Width="24" Height="24"/>
                    <TextBlock Padding="20,0,0,0" Text="Menu" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" Height="15"/>
                </StackPanel>
            </Border>
            <!--Table-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="../Assets/Images/table.png" Width="24" Height="24"/>
                    <TextBlock Padding="20,0,0,0" Text="Table" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" Height="15"/>
                </StackPanel>
            </Border>
            <!--Customer-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="../Assets/Images/customer.png" Width="24" Height="24"/>
                    <TextBlock Padding="20,0,0,0" Text="Customer" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" Height="15"/>
                </StackPanel>
            </Border>
            <!--Staff Management-->
            <Border Padding="8,8,8,8" BorderBrush="#d9d9d9" BorderThickness="0 1 0 0">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="Staff Management" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="SemiBold" LineHeight="20"/>
                </StackPanel>
            </Border>
            <!--Schedule-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="../Assets/Images/schedule.png" Width="24" Height="24"/>
                    <TextBlock Padding="20,0,0,0" Text="Schedule" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" Height="15"/>
                </StackPanel>
            </Border>
            <!--Staff Information-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="../Assets/Images/staffinfo.png" Width="24" Height="24"/>
                    <TextBlock Padding="20,0,0,0" Text="Staff Information" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" Height="15"/>
                </StackPanel>
            </Border>
            <!--Salary-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="../Assets/Images/salary.png" Width="24" Height="24"/>
                    <TextBlock Padding="20,0,0,0" Text="Salary" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" Height="15"/>
                </StackPanel>
            </Border>
            <!--Stocks and Products-->
            <Border Padding="8,8,8,8" BorderBrush="#d9d9d9" BorderThickness="0 1 0 0">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="Stocks and Products" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="SemiBold" LineHeight="20"/>
                </StackPanel>
            </Border>
            <!--Inventory Overview-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="../Assets/Images/inventory.png" Width="24" Height="24"/>
                    <TextBlock Padding="20,0,0,0" Text="Inventory Overview" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" Height="15"/>
                </StackPanel>
            </Border>
            <!--Products-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="../Assets/Images/product.png" Width="24" Height="24"/>
                    <TextBlock Padding="20,0,0,0" Text="Products" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" Height="15"/>
                </StackPanel>
            </Border>
            <!--Sales and Finances-->
            <Border Padding="8,8,8,8" BorderBrush="#d9d9d9" BorderThickness="0 1 0 0">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="Sales and Finances" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="SemiBold" LineHeight="20"/>
                </StackPanel>
            </Border>
            <!--Sales Overview-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="../Assets/Images/sales.png" Width="24" Height="24"/>
                    <TextBlock Padding="20,0,0,0" Text="Sales Overview" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" Height="15"/>
                </StackPanel>
            </Border>
            <!--Invoices-->
            <Border Padding="8,8,8,8">
                <StackPanel Margin="12,12,12,12" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="../Assets/Images/invoices.png" Width="24" Height="24"/>
                    <TextBlock Padding="20,0,0,0" Text="Invoices" Foreground="#49454F" FontSize="14" FontFamily="Roboto" FontWeight="Regular" Height="15"/>
                </StackPanel>
            </Border>
        </StackPanel>


    </Grid>

</UserControl>
