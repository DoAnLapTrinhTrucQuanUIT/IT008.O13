<UserControl x:Class="Restaurant_Management.Views.FoodCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_Management.Views"
             mc:Ignorable="d" 
             d:DesignHeight="290" d:DesignWidth="230">
    <Border Width="230" Height="290" Padding="15,30,15,30" Background="White" CornerRadius="12" Margin="0">
        <StackPanel>
            <Border Width="200" Height="140" Background="#DEDEDE" CornerRadius="12">
                <Image/>
            </Border>
            <Grid Margin="0,25,0,18">
                <TextBlock Text="Name of food" Foreground="Black" FontSize="18" FontFamily="Roboto" FontWeight="SemiBold" TextAlignment="Left"/>
            </Grid>
            <StackPanel Orientation="Horizontal" >
                <TextBlock Padding="0,0,140,0" Height="15" Text="Price" Foreground="Black" FontSize="14" FontFamily="Roboto" FontWeight="Regular" TextAlignment="Center"/>
                <Border Width="24" Height="24" CornerRadius="100" Background="#D14D72">
                    <Grid Margin="6">

                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </Border>

</UserControl>
