<UserControl x:Class="Restaurant_Management.Views.Component.ProductCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_Management.Views.Component"
             mc:Ignorable="d" 
             Width="250"
             Height="250">
    <Border x:Name="foodCardBorder" 
            Padding="20" 
            Background="White" 
            CornerRadius="12"
            Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Food name-->
            <Grid Grid.Row="0">
                <TextBlock x:Name="foodName" 
                           TextWrapping="Wrap"
                           Text="{Binding FoodName, RelativeSource={RelativeSource AncestorType={x:Type local:ProductCard}}}" 
                           Foreground="Black" 
                           FontSize="14" 
                           FontFamily="Roboto" 
                           FontWeight="Medium"/>
            </Grid>

            <!--Food description-->
            <Grid Grid.Row="1" 
                  Margin="0 20 0 0">
                <TextBlock x:Name="foodDescription" 
                           TextWrapping="Wrap"
                           Text="{Binding FoodDescription, RelativeSource={RelativeSource AncestorType={x:Type local:ProductCard}}}" 
                           Foreground="Black" 
                           FontSize="12" 
                           FontFamily="Roboto" 
                           FontWeight="Regular"/>
            </Grid>

            <!--Price & Add button-->
            <Grid Grid.Row="2" 
                  Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock x:Name="foodPrice" 
                               Text="{Binding FoodPrice, RelativeSource={RelativeSource AncestorType={x:Type local:ProductCard}}}" 
                               Foreground="Black" 
                               FontSize="14" 
                               FontFamily="Roboto" 
                               FontWeight="Medium" 
                               VerticalAlignment="Center"/>
                </Grid>
            </Grid>

        </Grid>
    </Border>
</UserControl>
