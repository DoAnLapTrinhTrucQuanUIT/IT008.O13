<UserControl x:Class="Restaurant_Management.Views.Component.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_Management.Views.Component"
             xmlns:vm="clr-namespace:Restaurant_Management.ViewModels"
             mc:Ignorable="d">
    
    <UserControl.DataContext>
        <vm:StaffInformationVM/>
    </UserControl.DataContext>

    <Border Padding="0 20 100 20" Background="#ffffff">
        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!--Notification icon-->
                <Grid>
                    <Image Source="../Assets/Images/Notification Icon.png"
                               Width="30"
                               Height="30" />
                </Grid>
                <!--Avatar Image-->
                <Grid Margin="50,0,0,0">
                    <Image Source="../Assets/Images/Person.png"
                               Width="30"
                               Height="30"/>
                </Grid>
                <!--Name & Role-->
                <StackPanel Orientation="Vertical"
                                Margin="30,0,0,0">
                    <Grid>
                        <TextBlock Padding="0 0 0 10"  Text="{Binding}"
                                       Foreground="Black"
                                       FontSize="14"
                                       FontFamily="Roboto"
                                       FontWeight="SemiBold"
                                       TextAlignment="Left"/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="{Binding}"
                                    Foreground="Black"
                                    FontSize="12"
                                    FontFamily="Roboto"
                                    FontWeight="Regular"
                                    TextAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
