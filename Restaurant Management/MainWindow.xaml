<Window x:Class="Restaurant_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant_Management" 
        xmlns:views="clr-namespace:Restaurant_Management.Views"
        xmlns:viewmodels="clr-namespace:Restaurant_Management.ViewModels"
        mc:Ignorable="d" 
        Name="Window"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        Background="White">
    <Window.DataContext>
        <viewmodels:NavigationVM/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Left Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            
        </Grid.RowDefinitions>
        <views:LeftSidebarView/>

        <Grid Grid.Column="1">
            <ContentControl x:Name="Pages"
                            Content="{Binding CurrentView}"/>
        </Grid>

    </Grid>

</Window>
